# Checkout.com API Configuration
# Get these keys from your Checkout.com Dashboard

# Secret Key (for server-side API calls)
# Should start with sk_test_ for sandbox or sk_ for production
CHECKOUT_SECRET_KEY=sk_test_your_secret_key_here

# Public Key (for client-side)
# Should start with pk_test_ for sandbox or pk_ for production  
CHECKOUT_PUBLIC_KEY=pk_test_your_public_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Set to 'production' when using live keys
# NODE_ENV=production
